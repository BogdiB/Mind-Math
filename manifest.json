{
    "manifest_version": 3,
    
    "name": "Mind Math",
    "version": "0.0",
    "description": "Helps you learn how to do math faster in your head.",

    "permissions": ["activeTab", "scripting"],
    "content_scripts": [{
        "js": ["scripts/content.js"],
        "matches": ["https://*/*"]
    }],
    "action": {
        "default_icon": {
            "16": "icons/icon_16.png",
            "32": "icons/icon_32.png"
        }
    },
    "icons": {
        "16": "icons/icon_16.png",
        "32": "icons/icon_32.png"
    },
    "background": {
        "service_worker": "scripts/background.js"
    }
}