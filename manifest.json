{
    "manifest_version": 3,
    
    "name": "Mind Math",
    "version": "0.5",
    "description": "Helps you learn how to do math faster in your head.",

    "permissions": ["activeTab", "tabs", "scripting", "storage"],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_icon": {
            "16": "icons/icon_16.png",
            "32": "icons/icon_32.png"
        },
        "default_popup": "html/popup.html",
        "default_title": "Click for the Mind Math popup."
    },
    "icons": {
        "16": "icons/icon_16.png",
        "32": "icons/icon_32.png"
    },
    "background": {
        "service_worker": "scripts/background.js",
        "type": "module"
    }
}